<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_clarisimo_fondo_Google"
    android:orientation="vertical"
    tools:context=".AccountsSelection" >

    <TextView
        android:id="@+id/tv_iban_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_redondeado"
        android:paddingBottom="12dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="12dp"
        android:text="@string/str_Select_account"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Blanco_nuclear" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_redondeado"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_account_selection"
            style="@style/ListViewBankAPP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:background="@color/rojo_medio_lista"
            android:divider="@color/bankapp_color"
            android:drawSelectorOnTop="false" >

        </ListView>

    </LinearLayout>

</LinearLayout>