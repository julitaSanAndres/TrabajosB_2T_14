<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_redondeado_login"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_account_iban"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="0.03"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Blanco_nuclear" />

    <ListView
        android:id="@+id/lv_account_movements"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="0.8"
        android:background="@color/verde_medio_lista"
        android:divider="@color/bankapp_color"
        android:drawSelectorOnTop="false" >

    </ListView>

    <TextView
        android:id="@+id/tv_account_balance"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="0.03"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Blanco_nuclear" />

</LinearLayout>
